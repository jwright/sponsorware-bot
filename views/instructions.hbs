        <div class="mb-4 -mt-4 flex justify-between relative">
          <div class="text-black text-opacity-25">003</div>
          <div class="text-black text-opacity-75 uppercase">Set the Content Type</div>
        </div>
        <div class="flex space-x-2">
          <div>
            <code class="p-2 bg-black bg-opacity-75 text-linen">application/json</code>
          </div>
        </div>
      </div>
      <div class="px-2 py-4 border-solid border border-black border-opacity-25 inline">
        <div class="mb-4 -mt-4 flex justify-between relative">
          <div class="text-black text-opacity-25">004</div>
          <div class="text-black text-opacity-75 uppercase">Set the Secret</div>
        </div>
        <div class="flex space-x-2">
          <div>
            <code class="p-2 bg-black bg-opacity-75 text-linen">{{ webhookSecret }}</code>
          </div>
          <svg class="h-8 w-auto mt-4" viewBox="0 0 448 393" xmlns="http://www.w3.org/2000/svg">
